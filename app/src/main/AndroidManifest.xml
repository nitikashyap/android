<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huntinggame">

    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_new_square"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/app_icon_new_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.HuntingGame"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.CompletedLeaderBoard.CompletedLeaderBoardActivity"
            android:exported="false" />
        <activity
            android:name=".activity.Gest.GuestLoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FriendActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CurrentLeaderBoardActivity"
            android:exported="false" />
        <activity
            android:name=".activity.GameChatDetails.GameChatDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LeaderBoard.LeaderBoardActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AddPlayerScreen.AddPlayerScreenActivity"
            android:exported="false" />
        <activity
            android:name=".activity.HuntingGame.HuntingGameActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CreateGame.CreateGameActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CodeVerification.CodeVerificationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.Verify.VerifyActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ResetPassword.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SignUp.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activity.Login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PlayScreen.PlayScreen"
            android:exported="false" />
        <activity
            android:name=".activity.Splash.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Main.MainActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"/>
    </application>

</manifest>